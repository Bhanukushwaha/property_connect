<div class="row">
  <div class="col-md-12">
    <div class="card card-plain">
      <div class="card-header card-header-primary">
        <h4 class="card-title mt-0">Companies</h4>
      	<div class="text-right mt-0 ">
         <%= link_to "new", new_admin_company_path, class: "btn btn-success " %>
      	</div>
      </div>
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-hover">
            <thead class="">
              <th>Title</th>
							<th>Description</th>
							<th colspan="3">Action</th>
            </thead>
            <tbody>
            	<% @company.each do |company| %>
								<tr>
									<td><%= company.title %></td>
									<td><%= company.description %></td>
									<td><%= link_to "show", admin_company_path(company), class: "btn btn-primary" %></td>
									<td><%= link_to "Edit", edit_admin_company_path(company), class: "btn btn-success" %></td>			        
									<td><%= button_to 'Destroy', admin_company_path(company), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
									</tr>
								</tr>
							<% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

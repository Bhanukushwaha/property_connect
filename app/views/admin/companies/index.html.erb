<h1>Welcome</h1>
<table>
	<tr>
		<th>Title</th>
		<th>Description</th>
	</tr>
	<tbody>
		<% @company.each do |company| %>
		<tr>
			<td><%= company.title%></td>
			<td><%= company.description%></td>
			<td><%= link_to "show", admin_company_path(company) %></td>
			<td><%= link_to "Edit", edit_admin_company_path(company) %></td>
			<td><%= link_to "Destroy", admin_company_path(company), data: {turbo_method: :delete,
        turbo_confirm: "Are you sure?"} %></td>
		</tr>
		<% end %>
	</tbody>
</table>
<%= link_to "new", new_admin_company_path %>
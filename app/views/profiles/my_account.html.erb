<!--Page Banner Section start-->
<div class="page-banner-section section">
  <div class="container">
    <div class="row">
      <div class="col">
        <h1 class="page-banner-title">My Account</h1>        
      </div>
    </div>
  </div>
</div>
<!--Page Banner Section end-->
<!--Login & Register Section start-->
<div class="login-register-section section pt-100 pt-lg-80 pt-md-70 pt-sm-60 pt-xs-50 pb-70 pb-lg-50 pb-md-40 pb-sm-30 pb-xs-20">
  <div class="container">
    <div class="row row-25">
      <%= render partial: "layouts/web/acount_menu"%>
      <div class="col-lg-8 col-12">
        <div class="tab-content ">
          <div id="" class="tab-pane show active">
            <%= form_with model: @profile do |form| %>
              <div class="row">
                <div class="col-12 mb-30">
                  <h3 class="mb-0">Personal Profile</h3>
                </div>
                  <div class="col-md-6 col-12 mb-30">
                    <label for="f_name">Name</label>
                    <%= form.text_field :name, autofocus: true, required: true,  placeholder: "Name" %>
                  </div>
                  <div class="col-md-6 col-12 mb-30">
                    <label for="l_name">Mobile Number</label>
                    <%= form.text_field :mobile_number, required: true, placeholder: "Mobile_number" %>
                  </div>
                  <div class="col-md-6 col-12 mb-30">
                    <label for="l_name"> Adress </label>
                    <%= form.text_field :address, required: true, placeholder: "About....." %>
                  </div>
                  <div class="col-md-6 col-12 mb-30">
                    <label for="l_name">Upload profile pic</label>
                    <% if form.object.image.attached? %>
                     <%= form.file_field :image %>
                    <% else %>
                      <%= form.file_field :image , required: true %>
                    <% end %>
                  </div>
                  <div class="col-md-6 col-12 mb-30">
                    <label for="about_me">About Us</label>
                    <%= form.text_area :about, required: true, placeholder: "About" %>
                  </div>
                  <div class="col-md-6 col-12 mb-30">
                    <label for="l_name">Profile pic</label>
                    <% if form.object.image.attached? %>
                      <%= image_tag form.object.image, style: "width: 120px; height: 120px; " %>
                    <% end %>
                  </div>
                <div class="col-12 mb-30"><%= form.submit "submit", class: "btn" %></div>        
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!--Login & Register Section end-->
                      <option>Yes</option>
                      <option>No</option>
                    </select>
                  </div>
                  <div class="col-md-4 col-12 mb-30">
                    <label>Water</label>
                    <select class="nice-select">
                      <option>Yes</option>
                      <option>No</option>
                    </select>
                  </div>
                  <div class="col-12 mb-30">

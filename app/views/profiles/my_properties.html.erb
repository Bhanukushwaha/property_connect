<!--Page Banner Section start-->
<div class="page-banner-section section">
  <div class="container">
    <div class="row">
      <div class="col">
        <h1 class="page-banner-title">My Account</h1>        
      </div>
    </div>
  </div>
</div>
<!--Page Banner Section end-->
<!--Login & Register Section start-->
<div class="login-register-section section pt-100 pt-lg-80 pt-md-70 pt-sm-60 pt-xs-50 pb-70 pb-lg-50 pb-md-40 pb-sm-30 pb-xs-20">
  <div class="container">
    <div class="row row-25">
      <div class="col-lg-4 col-12 mb-sm-50 mb-xs-50">
        <ul class="myaccount-tab-list nav">
          <li><a href="/my_account"><i class="pe-7s-user"></i>My Profile</a></li>          
          <li><a class="active" href="/my_properties"><i class="pe-7s-photo"></i>My Properties</a></li>
          <li><a href="/properties/new"><i class="pe-7s-back fa-flip-horizontal"></i>Add New Property</a></li>
          <li><a href="/new_password" data-bs-toggle="tab"><i class="pe-7s-lock"></i>Change Password</a></li>
          <li><a href="/users/sign_out"><i class="pe-7s-power"></i>Log Out</a></li>
        </ul>
      </div>
      <div class="col-lg-8 col-12">
        <div class="tab-content">
          <div class="tab-pane show active">
            <div class="row">
              <!--Property start-->
              <% @properties.each do |property| %>
              <div class="property-item col-md-6 col-12 mb-40">
                <div class="property-inner">
                  <div class="image">
                    <a href="single-properties.html"><img src="/assets/web/property-4.jpg" alt=""></a>
                    <ul class="property-feature">
                      <li>
                        <span class="area"><img src="/assets/web/area.png" alt=""><%= property.size %> SqFt</span>
                      </li>
                      <li>
                        <span class="bed"><img src="/assets/web/bed.png" alt=""><%= property.bedrooms %></span>
                      </li>
                      <li>
                        <span class="bath"><img src="/assets/web/bath.png" alt=""><%= property.bathrooms %></span>
                      </li>
                      <li>
                        <span class="parking"><img src="/assets/web/parking.png" alt=""><%= property.parking %></span>
                      </li>
                    </ul>
                  </div>
                  <div class="content">
                    <div class="left">
                      <h3 class="title"><a href="single-properties.html"><%= property.name %></a></h3>
                      <span class="location"><img src="/assets/web/marker.png" alt=""><%= property.location %></span>
                    </div>
                    <div class="right">
                      <div class="type-wrap">
                        <span class="price">&#8377;<%= property.price %></span>                   
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <% end %>
              <!--Property end-->
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!--Login & Register Section end-->